{
  "name": "sunbeam-gui",
  "version": "0.0.10",
  "description": "My Electron application description",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never",
    "release": "electron-builder --publish always",
    "lint": "echo \"No linting configured\"",
    "install-app:mac": "npm run build && rm -rf /Application/Sunbeam.app && cp -r dist/mac-universal/Sunbeam.app /Applications",
    "refresh-themes": "node scripts/refresh-themes.mjs"
  },
  "keywords": [],
  "author": {
    "name": "pomdtr",
    "email": "achille.lacoin@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "download": "^8.0.0",
    "lookpath": "^1.2.2",
    "minimist": "^1.2.7",
    "octokit": "^2.0.11",
    "portfinder": "^1.0.32",
    "xterm": "^5.1.0",
    "xterm-addon-attach": "^0.8.0",
    "xterm-addon-canvas": "^0.3.0",
    "xterm-addon-fit": "^0.7.0",
    "xterm-addon-web-links": "^0.8.0",
    "xterm-addon-webgl": "^0.14.0"
  },
  "build": {
    "appId": "com.electron.sunbeam",
    "productName": "Sunbeam",
    "artifactName": "${productName}_${platform}_${arch}.${ext}",
    "publish": [
      "github"
    ],
    "mac": {
      "target": {
        "target": "default",
        "arch": [
          "universal"
        ]
      }
    },
    "linux": {
      "target": {
        "target": "AppImage",
        "arch": [
          "arm64",
          "x64"
        ]
      }
    },
    "win": {
      "target": {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    }
  },
  "devDependencies": {
    "degit": "^2.8.4",
    "electron": "22.0.0",
    "electron-builder": "^23.6.0"
  }
}
